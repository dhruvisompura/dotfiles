" Tabs to spaces
set expandtab
set smarttab
set shiftwidth=4
set tabstop=4

" Enable syntax highlighting
syntax on

" Enable backspace in insert mode
set backspace=indent,eol,start

" Show cursor position
set ruler

" Ignore case while searching
set ignorecase
set smartcase

" Split to the right and below
set splitright
set splitbelow

" Highlight the current line
set cursorline
